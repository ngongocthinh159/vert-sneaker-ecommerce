<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.SearchFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_scrollFlags="noScroll">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="9dp"
                android:layout_marginEnd="9dp"
                android:layout_marginTop="9dp"
                app:layout_collapseMode="pin"
                android:id="@+id/topbar">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_baseline_arrow_back_24"
                    app:iconSize="24dp"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:id="@+id/btnBack"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_baseline_search_24"
                    app:boxCornerRadiusBottomEnd="20dp"
                    app:boxCornerRadiusBottomStart="20dp"
                    app:boxCornerRadiusTopEnd="20dp"
                    app:boxCornerRadiusTopStart="20dp"

                    android:id="@+id/textInputLayoutSearchBar"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:hint="@string/search_bar_text"
                        android:textSize="14sp"
                        android:id="@+id/searchBar" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/toolbar">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9dp"
                    android:layout_marginEnd="9dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="9dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSort"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sort"
                        style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                        app:icon="@drawable/ic_baseline_sort_24"
                        app:iconGravity="textEnd"
                        android:layout_marginEnd="9dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnFilter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Filter"
                        style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                        app:icon="@drawable/ic_baseline_filter_alt_24"
                        app:iconGravity="textEnd"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical"
                        android:gravity="end"
                        android:layout_marginStart="9dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sort: A to Z"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:id="@+id/tvSortType"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price range: 0$ - 1000$"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:id="@+id/tvPriceRange"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rVSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4.5dp"
        android:layout_marginEnd="4.5dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="9dp"
        android:layout_marginTop="135dp"
        app:cardCornerRadius="20dp"
        android:elevation="6dp"
        app:layout_anchor="@id/btnSort"
        android:visibility="gone"
        android:id="@+id/sortPicker"
        style="?attr/materialCardViewOutlinedStyle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="9dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSortPriceLTH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price: low to high"
                style="@style/Widget.Material3.Button.TextButton"
                android:gravity="left|center"
                android:textStyle="italic" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSortPriceHTL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price: high to low"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_marginTop="-10dp"
                android:gravity="left|center"
                android:textStyle="italic"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSortPriceATZ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A to Z"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_marginTop="-10dp"
                android:gravity="left|center"
                android:textStyle="italic"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSortPriceZTA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Z to A"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_marginTop="-10dp"
                android:gravity="left|center"
                android:textStyle="italic"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="9dp"
        android:layout_marginTop="135dp"
        app:cardCornerRadius="20dp"
        android:elevation="6dp"
        app:layout_anchor="@id/btnSort"
        android:visibility="gone"
        android:id="@+id/rangePicker"
        style="?attr/materialCardViewOutlinedStyle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="9dp"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Range"
                android:layout_marginTop="9dp"
                android:id="@+id/tvRange"/>


            <com.google.android.material.slider.RangeSlider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:id="@+id/rangeSlider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RESET"
                    android:layout_marginBottom="9dp"
                    android:layout_marginEnd="4.5dp"
                    style="@style/Widget.Material3.Button.ElevatedButton"
                    android:id="@+id/btnReset"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="APPLY"
                    android:layout_marginBottom="9dp"
                    android:layout_marginStart="4.5dp"
                    android:id="@+id/btnApply"/>
            </LinearLayout>


        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>