<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ProductDetailFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_scrollFlags="scroll|enterAlwaysCollapsed">

            <com.google.android.material.button.MaterialButton
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_baseline_arrow_back_24"
                app:iconSize="24dp"
                style="@style/Widget.Material3.Button.TextButton"
                android:id="@+id/btnBack" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="NIKE AIR FORCE 1"
                android:textStyle="italic"
                android:textSize="22sp"
                android:gravity="center"
                android:textAllCaps="true"
                android:id="@+id/largeTitle"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_baseline_shopping_cart_24"
                app:iconSize="24dp"
                style="@style/Widget.Material3.Button.TextButton"
                android:id="@+id/btnCart" />
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.denzcoskun.imageslider.ImageSlider
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:iss_period="2000"
                app:iss_auto_cycle="true"
                app:iss_delay="500"
                android:id="@+id/imageSlider"
                android:background="@android:color/transparent"
                android:backgroundTint="@android:color/transparent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="9dp"
                android:layout_marginEnd="9dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NIKE"
                            android:textStyle="italic"
                            android:textAllCaps="true"
                            android:textColor="?attr/colorPrimary"
                            android:layout_marginTop="18dp"
                            android:id="@+id/productBrand_detail"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AIR FORCE 1"
                            android:textAllCaps="true"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:id="@+id/productName_detail"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$110"
                            android:textSize="24sp"
                            android:id="@+id/productPrice_detail"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="18dp"
                        android:id="@+id/layoutViewAR">

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:iconSize="24dp"
                            app:iconTint="?attr/colorPrimary"
                            app:icon="@drawable/ic_baseline_photo_camera_24"
                            style="?attr/materialIconButtonFilledTonalStyle"
                            android:layout_marginTop="18dp"
                            android:id="@+id/btnViewARSmall"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View AR"
                            android:textSize="12sp"
                            android:textStyle="italic"
                            android:textColor="?attr/colorPrimary"/>
                    </LinearLayout>

                </LinearLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The radiance lives on in the Nike Air Force 1 â€™07, the b-ball OG that puts a fresh spin on what you know best: durably stitched overlays, clean finishes and the perfect amount of flash to make you shine."
                    android:id="@+id/productDes_detail"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Size:"
                    android:textSize="24sp"
                    android:layout_marginTop="18dp"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/toggleGroup"
                        app:singleSelection="true">

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="34"
                            android:backgroundTint="@color/toggle_button_icon_tint"
                            style="?attr/materialButtonOutlinedStyle"/>

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="35"
                            android:backgroundTint="@color/toggle_button_icon_tint"
                            style="?attr/materialButtonOutlinedStyle" />

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="36"
                            android:backgroundTint="@color/toggle_button_icon_tint"
                            style="?attr/materialButtonOutlinedStyle" />
                        <com.google.android.material.button.MaterialButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="37"
                            android:backgroundTint="@color/toggle_button_icon_tint"
                            style="?attr/materialButtonOutlinedStyle"/>

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="38"
                            android:backgroundTint="@color/toggle_button_icon_tint"
                            style="?attr/materialButtonOutlinedStyle"/>

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="39"
                            android:backgroundTint="@color/toggle_button_icon_tint"
                            style="?attr/materialButtonOutlinedStyle"/>

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="40"
                            android:backgroundTint="@color/toggle_button_icon_tint"
                            style="?attr/materialButtonOutlinedStyle"/>

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="41"
                            android:backgroundTint="@color/toggle_button_icon_tint"
                            style="?attr/materialButtonOutlinedStyle"/>

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="42"
                            android:backgroundTint="@color/toggle_button_icon_tint"
                            style="?attr/materialButtonOutlinedStyle"/>

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="43"
                            android:backgroundTint="@color/toggle_button_icon_tint"
                            style="?attr/materialButtonOutlinedStyle"/>

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="44"
                            android:backgroundTint="@color/toggle_button_icon_tint"
                            style="?attr/materialButtonOutlinedStyle"/>

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="45"
                            android:backgroundTint="@color/toggle_button_icon_tint"
                            style="?attr/materialButtonOutlinedStyle"/>

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="46"
                            android:backgroundTint="@color/toggle_button_icon_tint"
                            style="?attr/materialButtonOutlinedStyle"/>

                    </com.google.android.material.button.MaterialButtonToggleGroup>
                </HorizontalScrollView>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="VIEW AR"
                    android:layout_marginTop="9dp"
                    app:iconPadding="10dp"
                    app:iconSize="22dp"
                    app:icon="@drawable/ic_baseline_photo_camera_24"
                    style="?attr/materialIconButtonFilledTonalStyle"
                    android:layout_marginStart="-4dp"
                    android:layout_marginEnd="-4dp"
                    app:iconGravity="textEnd"
                    android:id="@+id/btnViewAR"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ADD TO CART"
                    android:layout_marginTop="9dp"
                    app:iconSize="22dp"
                    app:iconPadding="10dp"
                    app:iconGravity="textEnd"
                    app:icon="@drawable/ic_baseline_add_shopping_cart_24"
                    android:id="@+id/btnAddToCart"/>
            </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>