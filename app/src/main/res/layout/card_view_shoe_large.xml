<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:layout_marginStart="4.5dp"
    android:layout_marginEnd="4.5dp"
    app:cardElevation="4dp"
    android:layout_marginBottom="8dp"
    style="@style/Widget.Material3.CardView.Elevated"
    app:cardBackgroundColor="#67666f">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/productImageFirst"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/af1_demo"
            android:layout_marginTop="18dp"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="9dp" />

        <ProgressBar
            android:id="@+id/progressBarFirst"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="18dp"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="9dp"
            android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|bottom">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/productBranchFirst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NIKE"
                android:textStyle="italic"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginTop="0dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp" />

            <TextView
                android:id="@+id/productNameFirst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AIR FORCE 1"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginBottom="9dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="9dp"
            android:layout_marginEnd="18dp"
            android:text="$0.00"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="16sp"
            android:gravity="bottom|end" />
    </LinearLayout>


    </LinearLayout>
</com.google.android.material.card.MaterialCardView>