<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.rmit.ecommerce.HomeFragment"
        android:label="@string/home_fragment_title"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_gettingStartedFragment"
            app:destination="@id/gettingStartedFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/shoppingCartFragment"
        android:name="com.rmit.ecommerce.ShoppingCartFragment"
        android:label="@string/shopping_cart_fragment_title"
        tools:layout="@layout/fragment_shopping_cart" />
    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.rmit.ecommerce.NotificationFragment"
        android:label="fragment_notification"
        tools:layout="@layout/fragment_notification" />
    <fragment
        android:id="@+id/personalSettingFragment"
        android:name="com.rmit.ecommerce.PersonalSettingFragment"
        android:label="fragment_personal_setting"
        tools:layout="@layout/fragment_personal_setting" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.rmit.ecommerce.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login" />
    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.rmit.ecommerce.WelcomeFragment"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome">
        <action
            android:id="@+id/action_welcomeFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popEnterAnim="@android:anim/slide_in_left" />
        <action
            android:id="@+id/action_welcomeFragment_to_signUpFragment"
            app:destination="@id/signUpFragment"
            app:popEnterAnim="@android:anim/slide_in_left" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.rmit.ecommerce.SignUpFragment"
        android:label="Sign Up" />
    <fragment
        android:id="@+id/gettingStartedFragment"
        android:name="com.rmit.ecommerce.GettingStartedFragment"
        android:label="fragment_getting_started"
        tools:layout="@layout/fragment_getting_started">
        <action
            android:id="@+id/action_gettingStartedFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment" />
    </fragment>
    <action android:id="@+id/action_global_homeFragment3" app:destination="@id/homeFragment" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.rmit.ecommerce.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
    <action
        android:id="@+id/action_global_searchFragment"
        app:destination="@id/searchFragment"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_left"
        app:popEnterAnim="@anim/slide_in_left"
        app:popExitAnim="@anim/slide_out_right" />
    <fragment
        android:id="@+id/productDetailFragment"
        android:name="com.rmit.ecommerce.ProductDetailFragment"
        android:label="fragment_product_detail"
        tools:layout="@layout/fragment_product_detail" />
    <action
        android:id="@+id/action_global_productDetailFragment"
        app:destination="@id/productDetailFragment"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_left"
        app:popEnterAnim="@anim/slide_in_left"
        app:popExitAnim="@anim/slide_out_right" />

    <!--Activity destination-->

    <!--Global action-->
</navigation>